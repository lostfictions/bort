{
  "name": "bort",
  "version": "6.0.2",
  "description": "a fun bot for you",
  "private": true,
  "main": "dist/main.js",
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "DEBUG=bort DEBUG_HIDE_DATE=true DEBUG_COLORS=true ts-node -T src/main.ts",
    "dev-cli": "USE_CLI=true run-s dev",
    "build": "rm -rf dist/ && tsc",
    "test": "run-p -cl test:*",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint --color 'src/**/*'",
    "test:jest": "jest --colors",
    "test:prettier": "prettier 'src/**/*' -l",
    "prettier": "prettier 'src/**/*' --write",
    "jest": "jest --watch"
  },
  "dependencies": {
    "@sentry/integrations": "^6.16.1",
    "@sentry/node": "6.16.1",
    "axios": "^0.24.0",
    "cheerio": "^0.22.0",
    "chrono-node": "^2.3.5",
    "cmu-pronouncing-dictionary": "^1.0.3",
    "common-tags": "^1.8.2",
    "dayjs": "^1.10.7",
    "debug": "^4.3.3",
    "discord.js": "^12.5.3",
    "envalid": "6.0.1",
    "execa": "^5.1.1",
    "level": "^7.0.1",
    "lru-cache": "^6.0.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/cheerio": "0.22.22",
    "@types/common-tags": "^1.8.1",
    "@types/debug": "4.1.7",
    "@types/jest": "^27.4.0",
    "@types/levelup": "^4.3.3",
    "@types/lru-cache": "^5.1.1",
    "@types/node": "^16.11.17",
    "eslint": "^8.6.0",
    "eslint-config-lostfictions": "^3.0.1",
    "jest": "^27.4.5",
    "jsverify": "^0.8.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "rootDir": "src",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  }
}
