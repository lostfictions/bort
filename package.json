    "common-tags": "^1.8.2",
    "dayjs": "^1.11.13",
    "debug": "^4.4.1",
    "discord.js": "^14.18.0",
    "ky": "^1.8.2",
    "level": "^7.0.1",
    "znv": "^0.5.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/common-tags": "^1.8.4",
    "@types/debug": "4.1.12",
