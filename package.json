{
  "name": "bort",
  "version": "6.0.0",
  "description": "a fun bot for you",
  "private": true,
  "main": "dist/main.js",
  "author": "s <https://github.com/lostfictions>",
  "license": "AGPL-3.0",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "DEBUG=bort DEBUG_HIDE_DATE=true DEBUG_COLORS=true ts-node -T src/main.ts",
    "dev-cli": "USE_CLI=true run-s dev",
    "build": "rm -rf dist/ && tsc",
    "test": "run-s -l test:*",
    "test:ts": "tsc --noEmit",
    "test:eslint": "eslint 'src/**/*'",
    "test:jest": "jest --colors",
    "test:prettier": "prettier 'src/**/*' -l",
    "prettier": "prettier 'src/**/*' --write",
    "jest": "jest --colors --watch"
  },
  "dependencies": {
    "@sentry/integrations": "^5.20.1",
    "@sentry/node": "5.20.1",
    "axios": "^0.19.2",
    "cheerio": "^0.22.0",
    "chrono-node": "^2.1.7",
    "cmu-pronouncing-dictionary": "^1.0.3",
    "common-tags": "^1.8.0",
    "dayjs": "^1.8.33",
    "debug": "^4.1.1",
    "discord.js": "^12.2.0",
    "envalid": "^6.0.2",
    "level": "^6.0.1",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.21",
    "@types/common-tags": "^1.8.0",
    "@types/debug": "4.1.5",
    "@types/jest": "^26.0.9",
    "@types/levelup": "^4.3.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "eslint-config-lostfictions": "^0.2.0",
    "jest": "^26.3.0",
    "jsverify": "^0.8.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "engines": {
    "node": ">=12.1.0"
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "rootDir": "src",
    "globals": {
      "ts-jest": {
        "isolatedModules": true
      }
    }
  }
}
