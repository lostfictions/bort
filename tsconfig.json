{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "ES2020"
    ],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "skipLibCheck": true, // fuck bad typings my dudes
    "allowJs": true, // for ts-jest, who is a needy asshole
    // the following are required by next:
    "jsx": "preserve",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": [
    "defs",
    "src",
    "scripts",
    "next.config.js"
  ],
  "exclude": [
    "node_modules"
  ]
}