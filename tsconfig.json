{
  "compilerOptions": {
    "target": "es2019",
    "lib": [
      "ES2020",
      "ESNext.String",
    ],
    "module": "commonjs",
    "outDir": "dist",
    "strict": true,
    "allowUnreachableCode": false,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "skipLibCheck": true, // fuck bad typings my dudes
    "allowJs": true // for ts-jest, who is a needy asshole
  },
  "include": [
    "defs",
    "src",
    "scripts"
  ]
}